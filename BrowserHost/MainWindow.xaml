<Window x:Class="BrowserHost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        Background="Black">

    <Grid x:Name="RootGrid">
        <wv2:WebView2 x:Name="WebView"/>

        <Popup x:Name="ExitPopup"
               IsOpen="False"
               StaysOpen="True"
                             AllowsTransparency="True"
                             PopupAnimation="None"
                             Focusable="False"
               Placement="Bottom"
               PlacementTarget="{Binding ElementName=RootGrid}"
               HorizontalOffset="10"
                             VerticalOffset="-55">
            <Button Click="ExitButton_Click"
                                        Focusable="False"
                                        IsTabStop="False"
                    Background="#D32F2F"
                    Foreground="White"
                    FontFamily="Segoe UI"
                    FontSize="26"
                    FontWeight="Bold"
                    Width="160"
                    Height="56"
                    Padding="0,4">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch">
                    <Viewbox Width="48" Height="48" Margin="-2,0,4,0">
                        <Canvas Width="24" Height="24">
                            <Path Fill="White" Data="M4,3 L13,3 L13,9 L11,9 L11,5 L6,5 L6,19 L11,19 L11,15 L13,15 L13,21 L4,21 Z" />
                            <Path Fill="White" Data="M15,12 L9,12 L9,10 L15,10 L15,7 L21,11 L15,15 Z" />
                        </Canvas>
                    </Viewbox>
                    <TextBlock Text="Exit" VerticalAlignment="Center" />
                </StackPanel>
            </Button>
        </Popup>
    </Grid>
</Window>
