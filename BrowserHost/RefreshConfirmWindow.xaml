<Window x:Class="BrowserHost.RefreshConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Refresh page?" Height="200" Width="420" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="SingleBorderWindow">
    <Window.Resources>
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Background" Value="#DDDDDD" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="BorderBrush" Value="#888888" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Root"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.7" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Refresh the current page?" FontSize="18" FontWeight="Bold" />
        <TextBlock Grid.Row="1" Text="Choose 'Refresh' to reload, 'Cancel' to dismiss, or 'Home' to navigate to the initial page." TextWrapping="Wrap" Margin="0,8,0,8" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="BtnRefresh" Style="{StaticResource DialogButtonStyle}" Click="BtnRefresh_Click" Width="100" Height="34" Margin="0,0,12,0" Background="#1976D2" Foreground="White">Refresh</Button>
            <Button x:Name="BtnCancel" Style="{StaticResource DialogButtonStyle}" Click="BtnCancel_Click" Width="100" Height="34" Margin="0,0,12,0">Cancel</Button>
            <Button x:Name="BtnHome" Style="{StaticResource DialogButtonStyle}" Click="BtnHome_Click" Width="100" Height="34" Background="#D32F2F" Foreground="White">Home</Button>
        </StackPanel>
    </Grid>
</Window>
